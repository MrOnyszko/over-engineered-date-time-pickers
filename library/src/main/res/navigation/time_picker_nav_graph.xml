<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_picker_nav_graph"
    app:startDestination="@id/time_picker">

    <dialog
        android:id="@+id/time_picker"
        android:name="pl.gratitude.over.engineered.date_time.pickers.time.TimePicker"
        tools:layout="@android:layout/time_picker_dialog">

        <argument
            android:name="time"
            android:defaultValue="@null"
            app:argType="pl.gratitude.over.engineered.date_time.pickers.time.TimePickerArg"
            app:nullable="true" />

    </dialog>

    <action
        android:id="@+id/to_time_picker"
        app:destination="@id/time_picker">
        <argument
            android:name="time"
            android:defaultValue="@null"
            app:argType="pl.gratitude.over.engineered.date_time.pickers.time.TimePickerArg"
            app:nullable="true" />
    </action>

</navigation>